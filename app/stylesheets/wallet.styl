@require "helpers"

html
  background #FFFFFF

button
  padding 40px

.wallet
  text-align center
  background: #f3f3f3
  color: #01af9e
  width: 50%
  position relative
  padding 10px
  border-radius 8px
  margin-left 25%
  margin-bottom 1%

button
  background-color #01af9e
  border none
  color #FFFFFF
  padding 8px 20px
  text-align center
  text-decoration none
  display inline-block
  font-size 16px
  margin 4px
  border-radius 8px

button:focus
  outline none

.logo
  margin: 1%
  width: 10%

.logout-button
  float: right
  margin: 1%
  margin-top: 1.5%
  background-color #ffffff
  color: black

.text-input
  padding 10px
  border solid 2px #c9c9c9
  margin 0.5%
  transition border 0.3s

#submit-button
  border-radius: 8px
  border solid 2px #01af9e
  text-align center
  padding 2%
  margin 3%
  width 75px

.receive-button
  border-radius: 8px
  border solid 2px #01af9e
  text-align center
  padding 2%
  margin 3%
  width 75px

.walletButtons
  text-align center
  margin-left 42%

.divButton
  background-color #01af9e
  border none
  color #FFFFFF
  padding 8px 20px
  text-align center
  text-decoration none
  display inline-block
  font-size 16px
  margin 4px
  border-radius 8px

.modal
  display none
  position absolute
  background white
  padding 5%
  top 50%
  left 50%
  transform translate(-50%,-50%)
  border-radius: 8px
  width: 85%
  text-align center
  border solid 4px #01af9e
  @media all and (min-width: 770px)
    width: 50%

img
  width 25%